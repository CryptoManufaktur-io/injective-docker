##############
# PEGGO VARS #
##############
PEGGO_ENV="prod"
PEGGO_LOG_LEVEL="info"
PEGGO_SERVICE_WAIT_TIMEOUT="1m"

PEGGO_COSMOS_CHAIN_ID="injective-1"
PEGGO_COSMOS_GRPC="tcp://injective:9090"
PEGGO_TENDERMINT_RPC="http://injective:26657"
PEGGO_COSMOS_FEE_DENOM="inj"
PEGGO_COSMOS_GAS_PRICES="160000000inj"

PEGGO_COSMOS_KEYRING="file"
PEGGO_COSMOS_KEYRING_DIR="/cosmos/"
PEGGO_COSMOS_KEYRING_APP="" # likely set to the same as $MONIKER
PEGGO_COSMOS_FROM="inj1grggencxzdqenjrxw5x3f6uxy9phqnq4qyvwfn" # set to your injective address, either delegated operator or validator
PEGGO_COSMOS_FROM_PASSPHRASE=""
